@model dsignelixir.Models.Album

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Album</legend>

   <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">ThumbImage</div>
    <div class="display-field"> <img src=" @Url.Action("GetImage", "Albums", new {id = Model.Id})" alt="Delete Me?" /></div>

    <div class="display-label">OrderNumber</div>
    <div class="display-field">@Model.OrderNumber</div>

    <div class="display-label">Category</div>
    <div class="display-field">@(Model.Category == null ? "None" : Model.Category.Name)</div>

    <div class="display-label">Images</div>
    <div class="display-field">@(Model.Images == null ? "None" : Model.Images.Count.ToString())</div>

    
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


